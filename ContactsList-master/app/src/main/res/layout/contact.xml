<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp">

    <TextView
        android:text="Contact details"
        android:maxLines="1"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginLeft="10dp" />

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#393737"
        android:id="@+id/view" />


    <ImageView
        android:id="@+id/imgView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="17dp"
        android:background="#b0aeae"
        android:layout_alignLeft="@+id/textView2" />

    <TextView
        android:id="@+id/NameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameLine"
        android:layout_alignStart="@+id/imgView"
        android:maxLines="1"
        android:text="Name:"
        android:textColor="#0a0909"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/imgView" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NameTitle"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/NameTitle"
        android:hint="name"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/NameTitle" />

    <View
        android:id="@+id/nameLine"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/PhoneTitle"
        android:background="#393737"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/PhoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phoneLine"
        android:layout_alignStart="@+id/NameTitle"
        android:maxLines="1"
        android:text="Phone:"
        android:textAlignment="center"
        android:textColor="#0a0909"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/NameTitle" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phoneLine"
        android:layout_alignStart="@+id/name"
        android:hint="09XX XXX XXX"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/name" />

    <View
        android:id="@+id/phoneLine"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/EmailTitle"
        android:background="#393737"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/EmailTitle"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/PhoneTitle"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:text="Email:"
        android:textColor="#0a0909"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/PhoneTitle" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EmailTitle"
        android:layout_alignBottom="@+id/EmailTitle"
        android:layout_alignStart="@+id/number"
        android:hint="email"
        android:maxLines="1"
        android:textSize="18sp"
        android:layout_alignLeft="@+id/number" />

    <View
        android:id="@+id/emailLine"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/EmailTitle"
        android:background="#393737"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/PersonalInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/emailLine"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/back"
        android:maxLines="1"
        android:text="Personal info"
        android:textColor="#0a0909"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/back" />

    <TextView
        android:id="@+id/DateOfBirthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/EmailTitle"
        android:layout_below="@+id/PersonalInfoTitle"
        android:maxLines="1"
        android:text="Date of birth:"
        android:textColor="#0a0909"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/EmailTitle" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/DateOfBirthTitle"
        android:layout_alignBottom="@+id/DateOfBirthTitle"
        android:layout_toEndOf="@+id/textView2"
        android:hint="date of birth"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/textView2" />

    <View
        android:id="@+id/DateLine"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DateOfBirthTitle"
        android:background="#393737"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/GenderTitle"
        android:layout_alignBottom="@+id/GenderTitle"
        android:layout_alignStart="@+id/date"
        android:hint="gender"
        android:maxLines="1"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/date" />

    <TextView
        android:id="@+id/GenderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/DateOfBirthTitle"
        android:layout_below="@+id/DateOfBirthTitle"
        android:maxLines="1"
        android:text="Gender:"
        android:textColor="#0a0909"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/DateOfBirthTitle" />

    <View
        android:id="@+id/GenderLine"
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/GenderTitle"
        android:background="#393737"
        android:layout_alignParentLeft="true" />


    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:text="Back"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/delete"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/back"
        android:layout_alignBottom="@+id/back"
        android:layout_alignEnd="@+id/GenderLine"
        android:layout_alignRight="@+id/GenderLine"
        android:text="Delete" />

</RelativeLayout>