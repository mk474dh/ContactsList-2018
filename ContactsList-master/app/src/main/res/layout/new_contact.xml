<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_second"
    android:layout_width="350dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="0dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp">

    <TextView
        android:text="New Contact"
        android:maxLines="1"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/PersonalInfoTitle"
        android:text="Back"
        android:layout_toRightOf="@+id/PersonalInfoTitle" />

    <View
        android:layout_width="337dp"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#393737"
        android:id="@+id/view" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:background="#b0aeae"
        android:layout_alignLeft="@+id/textView2" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="88dp"
        android:layout_toEndOf="@+id/imgView"
        android:text="Choose foto"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/imgView" />



    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/btnChoose"
        android:id="@+id/txt_Name"
        android:layout_marginStart="10dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="textCapWords"
            android:maxLines="1" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txt_Surname"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/btnChoose"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <EditText
            android:id="@+id/surname"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:hint="surname"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:layout_marginLeft="150dp" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/txt_Name"
        android:id="@+id/txt_Number"
        android:layout_width="180dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <EditText
        android:id="@+id/number"
        android:hint="Phone number"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:layout_width="139dp"
        android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/txt_Number"
        android:id="@+id/txt_email"
        android:layout_width="330dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email"
            android:hint="email"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/PersonalInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:text="Personal info"
        android:textColor="#0a0909"
        android:textSize="25sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/PersonalInfoTitle"
        android:id="@+id/txt_Date"
        android:layout_width="180dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/date"
            android:hint="date of birth"
            android:inputType="textCapWords"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/PersonalInfoTitle"
        android:id="@+id/txt_Gender"
        android:layout_width="350dp"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/gender"
            android:hint="female/male"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:layout_marginStart="204dp"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="204dp" />

    </android.support.design.widget.TextInputLayout>



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="330dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:titleTextColor="@android:color/white"
        android:layout_below="@+id/txt_Date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />






</RelativeLayout>